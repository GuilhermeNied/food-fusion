generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  number      Int         @id @default(autoincrement())
  name        String
  description String
  items       OrderItem[]
  status      OrderStatus
}

model OrderItem {
  id      String @id @default(uuid())
  name    String
  orderId Int
  order   Order  @relation(fields: [orderId], references: [number])
}

enum OrderStatus {
  RECEIVED
  DOING
  DONE
  CANCELED
}
